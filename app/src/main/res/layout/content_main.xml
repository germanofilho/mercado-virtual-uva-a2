<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Principal"
            android:layout_marginBottom="10dip"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_escolher_produtos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolher Produtos"/>

        <Button
            android:id="@+id/btn_resumo_das_compras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumo das Compras"/>
        <Button
            android:id="@+id/btn_formas_pagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formas de Pagamento"/>
        <Button
            android:id="@+id/btn_relatorio_pagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RelatÃ³rio de Pagamento"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_resetar_dados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resetar dados da compra"
        android:background="@android:color/holo_red_light"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>